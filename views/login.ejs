<div class="loginSignup">
    <h1 class="testloop">[ TESTLOOP.COM ]</h1>
</div>

<div class="divLogin col-sm-6 col-sm-offset-3">
    <h1 class='login'>Login to your client account</h1>
    <!-- this will flash login message if errorr -->
    <% if(message.length) { %>
      <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/login" method="post">
        <div class="form-group">
            <label class='l1'>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label class='l2'>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn btn-info btn-lg">Login</button>
    </form>



    <p class='or'>Or, <a href="/signup" class="signupBtn">Signup</a></p>
    <p class='back'>Go back <a href="/" class="homeBtn">home</a>.</p>

</div>
